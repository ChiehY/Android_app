<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleimageView="http://schemas.android.com/apk/res/com.example.fff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/son">

    <TextView
        android:id="@+id/bt_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="拍照或者选择图片"
        android:textSize="18dp" >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d5d7"
        android:gravity="center_vertical"
        android:orientation="horizontal" />

    <com.example.fff.CircleImageView
        android:id="@+id/headIcon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        circleimageView:border_color="#ffffff"
        circleimageView:border_width="1dp" />

</LinearLayout>