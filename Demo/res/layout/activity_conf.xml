<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/person" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#66CCFF"
        >
        <ImageView
            android:id="@+id/iv_xyback"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_test_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="个人资料"
            android:textSize="14dp" /></RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        <TextView 
        android:id="@+id/tv_xyname_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
            android:textSize="16dp"
        />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d5d7"
        android:gravity="center_vertical"
        android:orientation="horizontal" />
    <TextView 
        android:id="@+id/tv_xyage_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
            android:textSize="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d5d7"
        android:gravity="center_vertical"
        android:orientation="horizontal" />
    <TextView 
        android:id="@+id/tv_xysex_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
            android:textSize="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d5d7"
        android:gravity="center_vertical"
        android:orientation="horizontal" />
    <TextView 
        android:id="@+id/tv_xy_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
            android:textSize="16dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/bt_photo"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="#66CCFF"
            android:text="贴上你的美照吧"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/bt_code"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="#66CCFF"
            android:text="快快扫扫吧"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>
    

</LinearLayout>
