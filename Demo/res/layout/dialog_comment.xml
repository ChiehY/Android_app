<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >
    <EditText 
        android:id="@+id/et_comment"
        android:layout_height="120dp"
        android:background="@null"
        android:layout_width="match_parent"
        android:hint="内容，100字以内"
        android:maxLines="30"
        android:gravity="top"
        android:padding="10dp"
        android:textSize="12sp"
        />
    
	<View 
	    android:layout_height="0.7dp"
	    android:layout_width="match_parent"
	    android:background="#44000000"
	    />
	<RelativeLayout 
	    android:layout_height="40dp"
	    android:layout_width="match_parent"
	    >
	    <ImageView 
	        android:id="@+id/comment_bq"
	        android:layout_marginLeft="20dp"
	        android:layout_centerVertical="true"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:background="@drawable/comment_bq"
	        />
	    <TextView 
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/comment_bq"
	        android:layout_centerVertical="true"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="表情"
	        android:textSize="12sp"
	        />
	    
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_alignParentRight="true"
	        android:orientation="horizontal"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="20dp"
	        >
	        <ImageView 
	            android:id="@+id/comment_cancel"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:background="@drawable/comment_cancel"
	            android:layout_marginRight="7dp"
	            />
	        <ImageView 
	            android:id="@+id/comment_fb"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:background="@drawable/comment_fb"
	            />
	    </LinearLayout>
	</RelativeLayout>
    	
</LinearLayout>
